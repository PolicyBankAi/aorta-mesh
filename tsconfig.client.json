{
  "extends": "./tsconfig.json",

  "include": ["client/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "server",
    "shared",
    "**/*.test.ts"
  ],

  "compilerOptions": {
    /* React / Vite frontend */
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],

    /* Output */
    "outDir": "./dist/client",
    "rootDir": "./client"
  }
}
