# .env.example

#################################
# Database
#################################
# Replace with your actual Postgres connection string (Neon, Supabase, RDS, etc.)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

#################################
# App Environment
#################################
# Use 'production' in deployed environments, 'development' locally
NODE_ENV=production

#################################
# SSL / HTTPS
#################################
ENABLE_SSL=true
SSL_EMAIL=admin@yourdomain.com
REPLIT_DOMAINS=yourdomain.com,www.yourdomain.com

#################################
# Secrets
#################################
# Generate a 32-byte encryption key (e.g. with `openssl rand -base64 32`)
DATABASE_ENCRYPTION_KEY=replace_with_generated_key

#################################
# Authentication
#################################
# Generate a secure random string (e.g. `openssl rand -hex 32`)
SESSION_SECRET=replace_with_secure_random_string

# Google OAuth (create credentials in Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
